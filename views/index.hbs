<div class="container mt-3 mx-auto">

  <div class="mb-5">
    <form action="/" class="auto" method="GET">
      <div class="d-flex justify-content-center">
        <div class="input-group w-50">
          <select class="form-select" name="select" id="select" onchange="this.form.submit()">
            <option>{{title}}</option>
            <option value="1">家局物業</option>
            <option value="2">交通出行</option>
            <option value="3">休閒娛樂</option>
            <option value="4">餐飲食品</option>
            <option value="5">其他</option>
          </select>
        </div>
      </div>
    </form>
  </div>

  <!-- 總金額 -->
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-row justify-content-start">
      <small class="me-5">總金額:</small>
      <h1>{{totalAmount}}</h5>
    </div>
  </div>

  <!-- 資料 -->
  <div class="d-flex justify-content-center my-3">
    <ul class="list-group w-50">
      {{#each records }}
          <li class="list-group-item mb-2 d-flex justify-content-around">
            <div class="d-flex">
              <div class="icon mx-2">
                <i class="" style="font-size: 3rem; color: lightblue;"></i>
              </div>
              <div class="d-flex ">
                <div class="d-flex flex-column me-5">
                  <span>{{ this.name }}</span>
                  <span>{{ this.date }}</span>
                </div>
                <div class="d-flex align-items-center ms-5">
                  <span>{{ this.amount }}</span>
                </div>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <a class="btn btn-success mx-2" href="/ledger/{{ this._id }}/edit">修改</a>
              <form action="/ledger/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-danger" type="submit">刪除</button>
              </form>
            </div>
          </li>
      {{/each}}
    </ul>

  </div>

</div>

<div class="text-center">
  <a href="/ledger/new" class="btn btn-info mt-3">新增支出</a>
</div>


