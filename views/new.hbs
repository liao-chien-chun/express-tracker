<form action="/ledger/new" method="POST">
  <div class="mb-5">
    <label class="me-3" for="name">名稱*：</label>
    <input type="text" id="name" name="name">
  </div>
  <div class="mb-5">
    <label class="me-3" for="date">日期*：</label>
    <input type="date" id="date" name="date">
  </div>
  <div class="mb-5">
    <label class="me-3" for="category">類別*：</label>
    <select name="category" id="category">
      <option selected disabled>selec</option>
      <option value="1">家局物業</option>
      <option value="2">交通出行</option>
      <option value="3">休閒娛樂</option>
      <option value="4">餐飲食品</option>
      <option value="5">其他</option>
    </select>
  </div>
  <div class="mb-5">
    <label class="me-3" for="amount">金額*：</label>
    <input type="number" id="amount" name="amount">
  </div>
  <div>
    <button type="submit">新增支出</button>
  </div>
</form>