<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <!-- m-auto 左右致中-->
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      
      <form action="/users/register" method="POST">
        <div class="form-group mt-3">
          <label for="name" class="mb-2">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{ name }}">
        </div>
        <div class="form-group mt-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="{{ email }}">
        </div>
        <div class="form-group mt-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="{{ password }}">
        </div>
        <div class="form-group mt-3">
          <label for="confirmPassword" class="mb-2">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Enter ConfirmPassword" value="{{ confirmPassword }}">
        </div>

        <button type="submit" class="btn btn-primary btn-block form-control my-3">Register</button>
        <a href="/auth/facebook" class="btn btn-info btn-block form-control">Facebook Login</a>
      </form>

      <p class="lead mt-4">
        Have An Account? <a href="/users/login" class="mx-1">Login</a>
      </p>
    </div>
  </div>
</div>